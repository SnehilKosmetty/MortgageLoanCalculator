@{
    ViewBag.Title = "Mortgage Loan Calculator";
}
<div class="container mt-4">
    <h2>Mortgage Loan Calculator</h2>
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }
    <form method="post" action="@Url.Action("Calculate")">
        <div class="form-group">
            <label>Loan Amount ($)</label>
            <input type="number" name="loanAmount" class="form-control" required min="1" step="0.01" />
        </div>
        <div class="form-group">
            <label>Annual Interest Rate (%)</label>
            <input type="number" name="interestRate" class="form-control" required min="0" step="0.01" />
        </div>
        <div class="form-group">
            <label>Loan Term (Years)</label>
            <input type="number" name="loanTermYears" class="form-control" required min="1" />
        </div>
        <button type="submit" class="btn btn-primary">Calculate</button>
    </form>
</div>